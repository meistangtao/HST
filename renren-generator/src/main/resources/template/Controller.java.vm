package ${package}.${moduleName}.controller;

import java.util.Arrays;

import com.baomidou.mybatisplus.core.metadata.IPage;
import com.tangtao.gulimall.common.res.R;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import ${package}.${moduleName}.entity.${className}Entity;
import ${package}.${moduleName}.service.${className}Service;


/**
 * ${comments}
 *
 * @author ${author}
 * @email ${email}
 * @date ${datetime}
 */
@RestController
@RequestMapping("${moduleName}/${pathName}")
public class ${className}Controller {
    @Autowired
    private ${className}Service ${classname}Service;

    /**
     * 列表
     */
    @RequestMapping("/list")
##    @("${moduleName}:${pathName}:list")
    public R list(@RequestBody ${className}Entity params){
        IPage page = ${classname}Service.queryPage(params);

        return R.succeed(page);
    }


    /**
     * 信息
     */
    @RequestMapping("/info/{${pk.attrname}}")
##    @("${moduleName}:${pathName}:info")
    public R info(@PathVariable("${pk.attrname}") ${pk.attrType} ${pk.attrname}){
        return R.succeed(${classname}Service.getById(${pk.attrname}));
    }

    /**
     * 保存
     */
    @RequestMapping("/save")
##    @("${moduleName}:${pathName}:save")
    public R save(@RequestBody ${className}Entity ${classname}){
        return R.succeed(${classname}Service.save(${classname}));
    }

    /**
     * 修改
     */
    @RequestMapping("/update")
##    @("${moduleName}:${pathName}:update")
    public R update(@RequestBody ${className}Entity ${classname}){
        return R.succeed(${classname}Service.updateById(${classname}));
    }

    /**
     * 删除
     */
    @RequestMapping("/delete")
##    @("${moduleName}:${pathName}:delete")
    public R delete(@RequestBody ${pk.attrType}[] ${pk.attrname}s){
        return R.succeed(${classname}Service.removeByIds(Arrays.asList(${pk.attrname}s)));
    }

}
